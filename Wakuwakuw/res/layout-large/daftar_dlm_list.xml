    <ImageView
    	android:layout_width="20dip"
    	android:layout_height="20dip"
    	android:id="@+id/imgViewLogoMember"
    	android:src="@drawable/members_icon"
    	android:layout_toRightOf="@+id/imgViewLogo"
    	android:layout_below="@+id/txtViewJenisAcara"
    	android:layout_marginTop="5dip">
    </ImageView>
    
    <TextView
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="2"
    	android:textSize="12sp"
    	android:textColor="#000000"
    	android:id="@+id/txtViewJumlahMember"
    	android:layout_below="@+id/txtViewJenisAcara"
    	android:layout_toRightOf="@+id/imgViewLogoMember"
    	android:layout_marginLeft="3dip"
    	android:layout_marginRight="15dip"
    	android:layout_marginTop="5dip">
    </TextView>
    
    <ImageView
    	android:layout_width="20dip"
    	android:layout_height="20dip"
    	android:id="@+id/imgViewLogoComment"
    	android:src="@drawable/comments_icon"
    	android:layout_toRightOf="@+id/txtViewJumlahMember"
    	android:layout_below="@+id/txtViewJenisAcara"
    	android:layout_marginTop="5dip">
    </ImageView>
    
    <TextView
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="2"
    	android:textSize="12sp"
    	android:textColor="#000000"
    	android:id="@+id/txtViewJumlahComment"
    	android:layout_below="@+id/txtViewJenisAcara"
    	android:layout_toRightOf="@+id/imgViewLogoComment"
    	android:layout_marginLeft="3dip"
    	android:layout_marginRight="15dip"
    	android:layout_marginTop="5dip">
    </TextView>
    
    <ImageView
    	android:layout_width="20dip"
    	android:layout_height="20dip"
    	android:id="@+id/imgViewLogoLike"
    	android:src="@drawable/love_icon"
